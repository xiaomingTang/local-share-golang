{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "common/*": ["../common/src/*"],
      "src/*": ["src/*"],
      "wailsjs/*": ["./wailsjs/*"]
    },
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "allowJs": false,
    "types": ["vite/client"]
  },
  "include": ["src", "vite.config.ts", "../common/src"]
}
